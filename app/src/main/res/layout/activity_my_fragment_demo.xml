<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myfragmentdemo.MyFragmentDemoActivity">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_result"
        android:gravity="center"
        android:layout_marginVertical="15dp"
        android:padding="5dp"
        android:text="@string/tic_tac_4x4"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:rowCount="4">
        
        <FrameLayout
            android:id="@+id/frame_0_0"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_0_1"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_0_2"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_0_3"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_1_0"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_1_1"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_1_2"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_1_3"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_2_0"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_2_1"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_2_2"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_2_3"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_3_0"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_3_1"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_3_2"
            style="@style/Square" />
        
        <FrameLayout
            android:id="@+id/frame_3_3"
            style="@style/Square" />
    </GridLayout>
    
    <FrameLayout
        android:id="@+id/frame_result"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="1">
    
    </FrameLayout>
</LinearLayout>